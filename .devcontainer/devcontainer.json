{
  "name": "frontendmentor-playground",
  "dockerComposeFile": ["../compose.dev.yml"],
  "service": "frontendmentor-playground-service",
  "workspaceFolder": "/workspace",
  "remoteUser": "node",
  "shutdownAction": "stopCompose",
  "postCreateCommand": "chmod +x ./.devcontainer/postCreateCommand.sh && sudo ./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "PKief.material-icon-theme",
        "esbenp.prettier-vscode",
        "donjayamanne.githistory",
        "dbaeumer.vscode-eslint",
        "asciidoctor.asciidoctor-vscode",
        "bradlc.vscode-tailwindcss",
        "ritwickdey.LiveServer",
        "csstools.postcss",
        "formulahendry.auto-rename-tag",
        "ecmel.vscode-html-css"
      ]
    }
  }
}
